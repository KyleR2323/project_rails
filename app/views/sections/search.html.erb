<p class="mb-5">
  Found <%= pluralize(@sections.count, 'section') %> when searching for: <%= params[:keywords] %>
</p>
<div class="columns is multiline">
  <% @sections.each do |section| %>
  <div class="column is-one-quarter">
    <div>
      <%= link_to "#{section.name}", section %>
    </div>
  </div>
  <% end %>
</div>