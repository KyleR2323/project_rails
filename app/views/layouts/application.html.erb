<!DOCTYPE html>
<html>
  <head>
    <title>ProjectRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <%= render "layouts/menu" %>
    <section class="section">
      <div class="container">
        <h1 class="title is-1">Dog Breeds<%= " - " + yield(:html_title) if content_for?(:html_title)%></h1>
      </div>
      <br>

      <%= form_with(url: search_dogs_path, method: :get, local: true) do %>
        <div class="field is-grouped mb-5">
          <%= text_field_tag(:keywords, nil, class:"input", placeholder: 'Search') %>
        </div>
        <div class="control">
          <%= submit_tag("Search", class: "button is-primary")%>
        </div>
      <% end %>
      <%= yield %>
    </section>
  </body>
</html>
